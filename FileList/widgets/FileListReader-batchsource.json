{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "File Source Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "textbox",
          "label": "Input path",
          "name": "path",
          "widget-attributes" : {
            "placeholder" : "/users/joltie/my/directory"
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [


        {
          "widget-type": "radio-group",
          "name": "recursive",
          "label": "Read Files Recursively",
          "widget-attributes": {
            "layout": "inline",
            "default": "false",
            "options": [
              {
                "id": "true",
                "label": "True"
              },
              {
                "id": "false",
                "label": "False"
              }
            ]
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "widget-type": "non-editable-schema-editor",
      "schema": {
        "fileName" : "string"
      }
    }
  ]
}